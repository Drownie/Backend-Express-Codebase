{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir" : "src",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/*.ts",
  ],
  "exclude": [
    // "node_modules/*/",
    ".webpack/*/",
    "_warmup/*/",
    ".idea/*"
  ]
}